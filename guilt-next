#

USAGE="[-p|--path]"
if [ -z "$GUILT_VERSION" ]; then
	echo "Invoking `basename "$0"` directly is no longer supported." >&2
	exit 1
fi

_main() {

while [ $# -ne 0 ]; do
	case "$1" in
	-p|--path)
		path="$GUILT_DIR/$branch/" ;;
	*)
		usage ;;
	esac
	shift
done

n=`wc -l < "$applied"`
n=$(($n + 1))

p=`get_series | awk "{ if (NR == $n) print \\$0}"`

if [ -n "$p" ]; then
	disp $path$p
fi

}
